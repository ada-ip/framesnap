<header>
	<nav class="px-3 py-1 border-bottom fixed-top">
		<div class="container">
			<div class="d-flex flex-wrap align-items-center justify-content-between">
				<!-- LOGO DE LA PÁGINA -->
				<a href="/" class="d-flex align-items-center my-0 me-auto text-decoration-none">
					<svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
						<use xlink:href="#bootstrap" />
					</svg>
				</a>

				<!-- OPCIONES DE NAVEGACIÓN -->
				<ul class="nav my-2 d-flex justify-content-center align-items-center my-0 text-small">
					<li>
						<!-- BÚSQUEDA DE USUARIOS Y POSTS -->
						<form
							action="/usuarios"
							method="GET"
							class="col-12 col-lg-auto mb-lg-0 me-lg-3"
							role="search"
							autocomplete="off"
						>
							<input
								id="buscar"
								type="search"
								class="form-control"
								placeholder="Buscar..."
								aria-label="Buscar"
								name="q"
							/>
							<!-- SUGERENCIAS DE USUARIOS AL BUSCAR -->
							<ul id="autocompletar-busqueda" class="dropdown-menu text-small"></ul>
						</form>
					</li>
					<!-- NOTIFICACIONES -->
					<li>
						<a href="#" class="nav-link">
							<svg class="bi d-block mx-auto mb-1" width="24" height="24">
								<use xlink:href="#notifications" />
							</svg>
						</a>
					</li>
					<!-- MENÚ DE USUARIO -->
					<li class="dropdown text-end">
						<a
							href="#"
							class="d-block link-dark text-decoration-none dropdown-toggle"
							data-bs-toggle="dropdown"
							aria-expanded="false"
						>
							<!-- FOTO DE PERFIL DE USUARIO -->
							<img
								src="<%= usuarioLogeado.signedUrlUsuario %>"
								alt="foto de perfil de <%= usuarioLogeado.nombre %>"
								width="50"
								height="50"
								class="rounded-circle foto-perfil-nav"
							/>
						</a>
						<ul class="dropdown-menu text-small">
							<li>
								<!-- LINK AL PERFIL DE USUARIO -->
								<a class="dropdown-item" href="/usuarios/<%= usuarioLogeado.nombre %>">Perfil</a>
							</li>
							<li><a class="dropdown-item" href="#">Settings</a></li>
							<li><a class="dropdown-item" href="#">Profile</a></li>
							<li><hr class="dropdown-divider" /></li>
							<li>
								<!-- FORMULARIO PARA CERRAR LA SESIÓN -->
								<form
									action="/api/v1/usuarios/<%= usuarioLogeado._id %>/desconectar"
									method="post"
									class="dropdown-item"
								>
									<input type="submit" class="btn btn-primary" name="desconectarse" value="Desconectarse" />
								</form>
							</li>
						</ul>
					</li>
				</ul>
			</div>
		</div>
	</nav>
</header>
